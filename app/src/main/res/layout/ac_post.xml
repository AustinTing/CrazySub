<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/postTitle"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%"
        android:background="#AA000088"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="設計你的旁白"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#FEFEFE"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btnPostOk"
            android:layout_height="wrap_content"
            app:layout_widthPercent="20%"
            android:text="確定"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:background="#77000088"
            android:textColor="#FEFEFE"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            />

    </android.support.percent.PercentRelativeLayout>


    <FrameLayout
        android:id="@+id/previewPost"
        app:layout_heightPercent="58%"
        app:layout_widthPercent="100%"
        android:layout_below="@id/postTitle">


        <ImageView
            android:id="@+id/imgToday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="#000088" />

        <TextView
            android:id="@+id/tvSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#000000"
            android:padding="5dp"
            android:text="太狂啦!!!"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="35dp" />

    </FrameLayout>

    <EditText
        android:id="@+id/editSub"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="100%"
        android:hint="來點超狂旁白吧！ヽ(✿ﾟ▽ﾟ)ノ"
        android:ems="10"
        android:layout_below="@id/previewPost"/>
    <EditText
        android:id="@+id/editDsc"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="100%"
        android:hint="加入說明，如果你有的話"
        android:ems="10"
        android:layout_below="@id/editSub"/>

</android.support.percent.PercentRelativeLayout>
